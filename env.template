# Copy this file to .env.local and fill in your values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/taxletters
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/taxletters

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Email SMTP Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
# Note: For Gmail, you need to generate an App Password:
# 1. Go to Google Account settings
# 2. Security > 2-Step Verification > App passwords
# 3. Generate a new app password for "Mail"

# Email Configuration
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Tax Letters System

# AWS S3 Configuration (for document storage)
# For local development, you can use AWS credentials
# For production on EC2, the IAM role will be used automatically
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_NAME=irs-response-documents-production
